<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Menu</title>
  </head>
  <body>
    <!-- Include the navigation or nav.ejs partial to the top of <body> -->
    <%- include('./partials/nav') %>

    <h1>Full Menu</h1>

    <!-- Mains -->
    <h2>Mains</h2>
    <ul>
      <% menu.forEach(item => { %> <% if (item.category === "mains") { %>
      <li>
        <h3>
        <%= item.name %>
        <% if (item.rating === 5) { %> ⭐ <% } %>
        </h3>
        <p>Price: $<%= item.price.toFixed(2) %></p>
        <p>Rating: <%= item.rating %>/5</p>
        <p>Details: <%= item.details %></p>
      </li>
      <% } %> 
      <% }); %>
    </ul>

    <!-- Desserts -->
    <h2>Desserts</h2>
    <ul>
      <% menu.forEach(item => { %> <% if (item.category === "desserts") { %>
      <li>
        <h3>
        <%= item.name %>
        <% if (item.rating === 5) { %> ⭐ <% } %>
        </h3>
        <p>Price: $<%= item.price.toFixed(2) %></p>
        <p>Rating: <%= item.rating %>/5</p>
        <p>Details: <%= item.details %></p>
      </li>
      <% } %> 
      <% }); %>
    </ul>

    <!-- Sides -->
    <h2>Sides</h2>
    <ul>
      <% menu.forEach(item => { %> <% if (item.category === "sides") { %>
      <li>
        <h3>
        <%= item.name %>
        <% if (item.rating === 5) { %> ⭐ <% } %>
        </h3>
        <p>Price: $<%= item.price.toFixed(2) %></p>
        <p>Rating: <%= item.rating %>/5</p>
        <p>Details: <%= item.details %></p>
      </li>
      <% } %> 
      <% }); %>
    </ul>
  </body>
</html>
